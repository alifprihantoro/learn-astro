---
import Wraper from '@components/Wraper.astro'
import { INFO_WEB } from '@configs/home'

const posts = await Astro.glob('../../content/note/**/*.md')
const postsReplace = posts.map((post) => {
  const frontmatter = post.frontmatter
  const TITLE = frontmatter.title
  const SLUG = frontmatter.slug
  return { TITLE, SLUG }
})
---

<Wraper INFO_SEO={INFO_WEB}>
  <main class='flex flex-wrap mx-10'>
    {
      postsReplace.map(({ SLUG, TITLE }) => {
        return (
          <div class='note-list'>
            <h2 class='card-title'>
              <a href={`./note/${SLUG}`}>{TITLE}</a>
            </h2>
          </div>
        )
      })
    }
  </main>
</Wraper>
